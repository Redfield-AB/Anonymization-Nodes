<?xml version="1.0" encoding="UTF-8"?>
<knimeNode icon="./icons/write_hierarchy.png" type="Sink" xmlns="http://knime.org/node/v2.10" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://knime.org/node/v2.10 http://knime.org/node/v2.10.xsd">
    <name>Hierarchy Writer</name>
    
    <shortDescription>
        Node for saving hierarchies as *.ahs files.
    </shortDescription>
    
    <fullDescription>
        <intro>Node for saving hierarchies as *.ahs files.</intro>
        
        <tab name="Options">
        	<option name="Selected Directory">
        		Directory to save hierarchy files.
        	</option>
        	<option name="File name prefix">
        		Optional prefix added to the beginning of the file name.
        	</option>
        	<option name="Overwrite existing files">
        		If enabled any existing files will be overwritten.
        		If disabled these files will be skipped and listed in warning message.
        	</option>
        </tab>
    </fullDescription>
    
    <ports>
        <inPort index="0" name="Arx Hierarchy Configuration">Arx Hierarchy Configuration</inPort>
        <!-- possibly more input ports here-->
        <!-- possibly more output ports here-->
    </ports>    
